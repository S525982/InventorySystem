@model GDP.ViewModel.NewBuyerViewModel
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Location</h2>
@using (Html.BeginForm("Create","Buyer"))
{ 
    <div class="form-group">
        @Html.LabelFor(m => m.Buyer.Location.address)
        @Html.TextBoxFor(m => m.Buyer.Location.address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Buyer.Location.city)
        @Html.TextBoxFor(m => m.Buyer.Location.city, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Buyer.Location.zipcode)
        @Html.TextBoxFor(m => m.Buyer.Location.zipcode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Buyer.Location.phone)
        @Html.TextBoxFor(m => m.Buyer.Location.phone, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Buyer.Location.email)
        @Html.TextBoxFor(m => m.Buyer.Location.email, new { @class = "form-control" })
    </div>

    <button type="submit" value="Next" class="btn btn-primary">Create</button>
            }

